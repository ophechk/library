<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Galerie</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }

        .gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .gallery-item {
            width: 48%;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: white;
            border-radius: 5px;
            overflow: hidden;
        }

        .gallery-item img {
            width: 100%;
            height: auto;
            display: block;
            transition: transform 0.3s ease;
        }

        .gallery-item:hover img {
            transform: scale(1.03);
        }

        .image-caption {
            padding: 15px;
            text-align: center;
            color: #666;
        }

        @media (max-width: 768px) {
            .gallery-item {
                width: 100%;
            }
        }
    </style>
</head>

<br>

<body>

    <%- include('./partials/header'); %>

        <h1>Galerie de couvertures</h1>

        <div class="container">

            <div class="gallery">

                <% images.forEach(function(image, index) { %>
                    <div class="gallery-item">
                        <img src="<%= image.src %>" alt="<%= image.alt %>">
                        <div class="image-caption">
                            <%= image.caption %>
                        </div>
                    </div>
                    <% }); %>

            </div>

        </div>
</body>

<%- include('./partials/footer'); %>

</html>